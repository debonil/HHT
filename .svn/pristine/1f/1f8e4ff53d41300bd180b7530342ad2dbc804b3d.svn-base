<ion-header>
  <ion-navbar color="primary">
    <button ion-button menuToggle>
      <ion-icon name="menu"></ion-icon>
    </button>
    <ion-title>Chart Page</ion-title>
    <ion-buttons end >
      <a ion-button icon-only style="display:none" id="mu_sh">
        <ion-icon name="contacts"></ion-icon>
      </a>
    </ion-buttons>
    <ion-buttons end >
      <!-- <a ion-button icon-only style="display:none" id="shift" (click)="openModel_ShiftPsgn({charNum: 0})"> -->
        <a ion-button icon-only style="display:none" id="shift">
        <ion-icon name="hand"></ion-icon>
      </a>
    </ion-buttons>
    <ion-buttons end >
      <a ion-button icon-only style="display:none" id="bo_at">
        <ion-icon name="happy"></ion-icon>
      </a>
    </ion-buttons>
    <ion-buttons end >
      <a ion-button icon-only style="display:none" id="go_at">
        <ion-icon name="help-circle"></ion-icon>
      </a>
    </ion-buttons>   
    <ion-buttons end >
      <a ion-button icon-only style="display:none" id="mu_sh">
        <ion-icon name="contacts"></ion-icon>
      </a>
    </ion-buttons>
    <ion-buttons end >
      <a ion-button icon-only id="sync" (click)="refreshChart()">
        <ion-icon name="sync"></ion-icon>
      </a>
    </ion-buttons>
    <ion-buttons end>
     <a ion-button icon-only (click)="openPopover($event)">
      <ion-icon name="more"></ion-icon>
    </a>
    </ion-buttons>
    <ion-buttons end>
      <a ion-button icon-only id="eft" style="display:none">
        <ion-icon name="folder-open"></ion-icon>
      </a>
    </ion-buttons>
    </ion-navbar>
</ion-header>

<ion-content>
  <ion-card *ngIf="trainAssignment">
    <ion-row>
      <ion-col col-12>
        <ion-item >
          <ion-label color="primary">Boarding Points</ion-label>
          <ion-select multiple="true" [(ngModel)]="selectedBoardingPoints" (ionChange)="filterData()">
            <ion-option *ngFor="let item of trainAssignment.ISL_ARR" >{{item}}</ion-option>
          </ion-select>
        </ion-item>
      </ion-col>
    </ion-row>
    <!-- <ion-searchbar (ionInput)="getItems($event)" (ionCancel)="cancelPsgnSearch($event)" [showCancelButton]="shouldShowCancel"></ion-searchbar>
    <ion-list>
        <ion-item *ngFor="let item of listitems">
            <ion-label>{{ item.json.PNR_NO }}- {{ item.json.PSGN_NAME }} - {{ item.json.COACH_ID }}- {{ item.json.BERTH_NO }} -{{ item.json.BOARDING_PT }} --{{ item.json.RES_UPTO }}</ion-label>
            <ion-checkbox color="secondary"></ion-checkbox>
        </ion-item>
    </ion-list> -->
  </ion-card>
  <!-- <ion-list ng-if="coachwiseChartData!=null&&coachwiseChartData.length>0">
    <ion-item *ngFor="let tab of coachwiseChartData">{{tab.key}}=>{{tab.value.length}}</ion-item> 
  </ion-list> -->
  <super-tabs *ngIf="coachwiseChartDataLoaded" [scrollTabs]="coachwiseChartData.length>10" >
     <super-tab *ngFor="let tab of coachwiseChartData" [root]="chartComponent" title="{{tab.key}}" [rootParams]="{psngdata:tab.value,readonly:false}" ></super-tab>  
    <!-- <super-tab *ngFor="let tab of coachwiseChartData2" [root]="chartComponent" title="{{tab.key}}" [rootParams]="tab.value" ></super-tab> -->
  </super-tabs>
  
