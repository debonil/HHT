<ion-header>
  <ion-navbar color="primary">
    <button ion-button menuToggle>
      <ion-icon name="menu"></ion-icon>
    </button>
    <ion-title>NC Passengers</ion-title>
  </ion-navbar>
</ion-header>

<ion-content padding responsive-sm>
  <ion-card>
    <ion-item>
      <ion-label><strong>Select Coach</strong></ion-label>
      <ion-select [(ngModel)]="coachValue" #C (ionChange)="getNCPassenger(C.value)">
        <ion-option *ngFor="let option of coachId" [value]="option">{{option.COACH_ID}}</ion-option>
      </ion-select>
    </ion-item>
  </ion-card>
  <ion-card>
    <ion-list *ngIf="psgnArray.length>0">
          <ion-item floating>
            <ion-label align=center ><strong>PSGN_NAME</strong></ion-label>
            <ion-label align=center><strong>COACH</strong></ion-label>
            <ion-label align=center><strong>BERTH_NO</strong></ion-label>
            <ion-label align=center><strong>SRC</strong></ion-label>
            <ion-label align=center><strong>DEST</strong></ion-label>
            <ion-label align=center><strong>REMARKS</strong></ion-label>
          </ion-item>
          <ion-item *ngFor="let item of psgnArray" align=center floating>
            <ion-label align=center>{{item.PSGN_NAME}}</ion-label>
            <ion-label align=center>{{item.COACH_ID}}</ion-label>
            <ion-label align=center>{{item.BERTH_NO}}</ion-label>
            <ion-label align=center>{{item.BOARDING_PT}}</ion-label>
            <ion-label align=center>{{item.RES_UPTO}}</ion-label>
            <ion-label align=center>{{item.REMARKS}}</ion-label>
          </ion-item>
    </ion-list>
  </ion-card> 
  
</ion-content>
