<div class="container">
  <div class="radio-wrapper">
    <p class="correct"><i class="ion-checkmark-round"></i>
    </p>
    <p class="neutral-icon"><i class="ion-record"></i>
    </p>
    <p class="wrong"><i class="ion-close-round"></i></p>
    <input type="radio" name="{{name}}" class="yes" id="radio-yes-{{name}}"  (ngChange)="setValue()"
     value="TU" [(ngModel)]="value"/>
    <label for="radio-yes-{{name}}"></label>

    <input type="radio" name="{{name}}" class="neutral" checked id="radio-neutral-{{name}}" (ngChange)="setValue()"
      value="--" [(ngModel)]="value"/>
    <label for="radio-neutral-{{name}}"></label>
    <input type="radio" name="{{name}}" class="no" id="radio-no-{{name}}"  (ngChange)="setValue()"
     value="NT" [(ngModel)]="value"/>
    <label for="radio-no-{{name}}"></label>
  </div>
  <p>{{value}}</p>
</div>