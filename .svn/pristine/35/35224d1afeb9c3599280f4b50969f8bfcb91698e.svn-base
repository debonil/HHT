<ion-header>

  <ion-navbar>
    <ion-title>Mutual Shift</ion-title>
  </ion-navbar>

</ion-header>


<ion-content padding>
  <ion-card>
    <ion-item *ngFor="let item of psgnData">
      <ion-label>{{item.PSGN_NAME}}<br>{{item.PNR_NO}}</ion-label>
     <!--  <ion-label>{{item.PNR_NO}}</ion-label> -->
      <ion-label>{{item.REL_POS}}</ion-label>
      <ion-label>{{item.BERTH_NO}}</ion-label>
      <ion-label>{{item.BOARDING_PT}}</ion-label>
      <ion-label>{{item.RES_UPTO}}</ion-label>

    </ion-item>
  </ion-card>
  <h2 align=center><font color=green>PLEASE SELECT MUTUAL SHIFT COACH</font></h2>
  <ion-card>
    <ion-item>
      <ion-label><strong>Select Coach</strong></ion-label>
      <ion-select [(ngModel)]="coachValue" #C (ionChange)="getPassenger(C.value)">
        <ion-option *ngFor="let option of coachId" [value]="option">{{option.COACH_ID}}</ion-option>
      </ion-select>
    </ion-item>
  </ion-card>
  <ion-card>
    <ion-item>
      <ion-label><strong>Select Passenger</strong></ion-label>
      <ion-select [(ngModel)]="psgnValue" #D (ionChange)="getShift(D.value)">
        <ion-option *ngFor="let option of passVal" [value]="option">{{option.BERTH_NO}}-{{option.PSGN_NAME}}</ion-option>
      </ion-select>
    </ion-item>
  </ion-card>
</ion-content>
