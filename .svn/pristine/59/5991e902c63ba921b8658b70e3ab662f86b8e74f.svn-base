<ion-header>
  <ion-navbar color="primary">
    <button ion-button menuToggle>
      <ion-icon name="menu"></ion-icon>
    </button>
    <ion-title>Vacant Berths</ion-title>
  </ion-navbar>
</ion-header>
<ion-content padding>
  
  <super-tabs *ngIf="tabs.length > 0"tabBadgeStyle="danger" >
       <ng-container *ngFor="let tab of tabs" >
           <super-tab *ngIf="tab.value.length>0" [root]="tab1Root" title="{{tab.key}} ({{tab.value.length}})" [rootParams]= 'tab.value' ></super-tab>
          <super-tab *ngIf="tab.value.length==0"   [root]="tab1Root" title="{{tab.key}}"  [rootParams]= 'tab.value' ></super-tab>
         
          </ng-container>
  </super-tabs>

</ion-content>

